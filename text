public class App {
    public static void main(String[] args) {
        new GameJFrame();
        new LonginJFrame();
        new RegisterJFrame();
    }
}

import javax.swing.*;

public class GameJFrame extends JFrame {
    //游戏主界面
    public GameJFrame(){
        setSize(603,680);
        //设置界面的标题
        setTitle("拼图单机版 v1");
        //进行置顶
        setAlwaysOnTop(true);
        //设置界面居中
        setLocationRelativeTo(null);
        //设置关闭模式,0:什么都不做，关不掉，1：默认关闭方式，2：关闭最后一个，3：关闭一个
        setDefaultCloseOperation(3);
        setVisible(true);
    }
}


import javax.swing.*;

public class LonginJFrame extends JFrame {
    //登录界面
    public LonginJFrame(){
        setSize(488,430);
        //设置界面的标题
        setTitle("拼图 登录");
        //进行置顶
        setAlwaysOnTop(true);
        //设置界面居中
        setLocationRelativeTo(null);
        //设置关闭模式,0:什么都不做，关不掉，1：默认关闭方式，2：关闭最后一个，3：关闭一个
        setDefaultCloseOperation(3);
        setVisible(true);
    }
}


import javax.swing.*;

public class RegisterJFrame extends JFrame {
    //注册界面
    public RegisterJFrame(){
        setSize(488,500);
