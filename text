        setTitle("拼图 注册");
        //进行置顶
        setAlwaysOnTop(true);
        //设置界面居中
        setLocationRelativeTo(null);
        //设置关闭模式,0:什么都不做，关不掉，1：默认关闭方式，2：关闭最后一个，3：关闭一个
        setDefaultCloseOperation(3);
        setVisible(true);
    }
}
